<div class="header">
  <div class="logo-website">
    <div class="col-md-8">
      <h1><%= t "shared.logo" %></h1>
    </div>
    <div class="col-md-4 search-form">
      <%= form_for :search, url: search_path do |f| %>
        <div class="input-group">
          <%= f.text_field :search, data: {autocomplete_source: user_list},
            class: "form-control", placeholder: t(".search") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="menu-wrap">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to t("index.home"), root_path, class: "font-size" %>
        </li>
        <li><a href="#" class="font-size"><%= t "index.help" %></a></li>
        <li><a href="#" class="font-size"><%= t "index.about" %></a></li>
        <li>
          <%= link_to t("index.user"), users_path, class: "font-size" %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to user_path(current_user) do %>
              <span class="glyphicon glyphicon-user"></span>
              <b class="font-size"><%= current_user.username %></b>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-user"></span>
              <%= t "devise.links.log_in" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
