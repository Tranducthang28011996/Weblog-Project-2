<div class="header"></div>
<div class="menuwrap">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to t("index.home"), root_path %>
        </li>
        <li><a href="#"><%= t "index.help" %></a></li>
        <li><a href="#"><%= t "index.about" %></a></li>
        <li>
          <%= link_to t("index.user"), users_path %>
        </li>
      </ul>
      <form class="navbar-form navbar-left">
        <div class="input-group">
          <input type="text" class="form-control" placeholder=<%= t "index.search" %>>
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li>
            <%= link_to user_path(current_user) do %>
              <span class="glyphicon glyphicon-user"></span><%= current_user.username %>
            <% end %>
          </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path do %>
                <span class="glyphicon glyphicon-user"></span><%= t "devise.sessions" %>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
