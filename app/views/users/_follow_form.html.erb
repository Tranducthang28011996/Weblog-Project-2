<div class="follow">
  <div class="col-md-2" data-toggle="tooltip" data-placement="bottom" title=<%= t "follow.following" %>>
    <span class="fa fa-user-plus ml-05" >
      (<%= user.following.size %>)
    </span>
  </div>
  <div class="col-md-2" data-toggle="tooltip" data-placement="bottom" title=<%= t "follow.follower" %>>
    <span class="fa fa-user-plus ml-05">
      (<%= user.followers.size %>)
    </span>
  </div>
  <div class="col-md-2" data-toggle="tooltip" data-placement="bottom" title=<%= t "follow.post" %>>
    <span class="fa fa-pencil ml-05">
    (28)
    </span>
  </div>

  <div class="col-md-3">
    <% if current_user != user && current_user %>
      <% if current_user.following? user %>
        <%= link_to t("follow.unfollow"), unfollow_path(user), method: :delete,
          class: "btn btn-default btn-follow" %>
      <% else %>
        <%= link_to t("follow.follow"), follow_path(user), method: :post,
          class: "btn btn-default btn-follow" %>
      <% end %>
    <% end %>
  </div>
  <% if current_user == user %>
    <div class="col-md-3 setting-user">
      <span class="fa fa-cog" aria-hidden="true"
        data-toggle="modal" data-target="#myModal">
      </span>
    </div>
  <% end %>
</div>
