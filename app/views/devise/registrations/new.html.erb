<div class="main">
  <div class="register">
    <div class="col-md-8 col-md-offset-2">

      <h2><%= t "devise.registration" %></h2>

        <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>

          <%= devise_error_messages! %>

          <%= f.label :name %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-user"></span>
            </span>
            <%= f.text_field :username, class: "form-control", autofocus: true %>
          </div>

          <%= f.label :email %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-user"></span>
            </span>
            <%= f.email_field :email, class: "form-control"%>
          </div>

          <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length%> <%= t("devise.min_size") %>)</em>
            <% end %><br />

          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-lock"></span>
            </span>
            <%= f.password_field :password, class: "form-control", autocomplete: "off"%>
          </div>

          <%= f.label :Password_confirmation %>
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-lock"></span>
            </span>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off"%>
          </div>

          <div class="actions checkbox col-md-offset-4">
            <%= f.submit t("devise.registration"), class: "btn btn-default" %>
          </div>
        <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
